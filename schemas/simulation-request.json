{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "valor_imovel": {
      "type": "number",
      "minimum": 1,
      "maximum": 100000000
    },
    "entrada": {
      "type": "number",
      "minimum": 0
    },
    "prazo_meses": {
      "type": "integer",
      "minimum": 12,
      "maximum": 480
    },
    "tipo_amortizacao": {
      "type": "string",
      "enum": ["PRICE", "SAC"]
    },
    "regiao": {
      "type": "string",
      "pattern": "^[A-Z]{2}$"
    }
  },
  "required": ["valor_imovel", "entrada", "prazo_meses", "tipo_amortizacao", "regiao"]
}
